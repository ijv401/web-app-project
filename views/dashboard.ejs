
<!DOCTYPE html >
<html lang="en">
<%- include('include/head')%>
<body>
    <%- include('include/header')%>
    
    <main>
        <% if (posts.length==0){%>
        <h4>hello <%= user.username %> you do not have any posts</h4>
        <%} else { %>
        <h4>hello <%= user.username %> here are your posts</h4>
        <%}%>

    
    <ul>
        <% posts.forEach(post =>{ %>
            <li>
                <a href="/post/<%= post.id %>"><%= post.title %></a> on 
                <%= new Date(post.createdDate).getMonth() + 1 %>/
                <%= new Date(post.createdDate).getDate() %>/
                <%= new Date(post.createdDate).getFullYear() %>
            
            </li>
        
       <% })%>
    </ul>
    </main>
    <%- include('include/footer')%>
</body>

</html>